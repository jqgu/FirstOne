<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.zg.firstone.Fragment_Pay">

    <com.example.zg.firstone.Layout_KeyBoard
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"></com.example.zg.firstone.Layout_KeyBoard>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pay_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_style"
            android:text="Request" />

        <Button
            android:id="@+id/pay_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_style"
            android:text="Pay" />
    </LinearLayout>


</LinearLayout>
